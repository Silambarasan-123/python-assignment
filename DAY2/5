class Solution(object):
    def findMedianSortedArrays(self, nums1, nums2):
        merged = sorted(nums1 + nums2)  # ğŸ”¹ Merge and sort both arrays
        n = len(merged)
        mid = n // 2
        if n % 2 == 0:
            return (merged[mid - 1] + merged[mid]) / 2.0  # ğŸ”¹ Median for even-length case
        else:
            return merged[mid]  # ğŸ”¹ Median for odd-length case
